{
  "name": "typescript-vercel-template",
  "version": "1.0.0",
  "description": "Typescript starter template for Vercel",
  "repository": "https://github.com/AreebGhani/typescript-vercel-template.git",
  "author": "Areeb Ghani <areebghanidps@gmail.com>",
  "private": false,
  "type": "module",
  "engines": {
    "node": ">=22.0.0"
  },
  "main": "index.js",
  "scripts": {
    "start": "echo âš™ï¸ Configuring Environment for production... && cross-env NODE_ENV=production node ./scripts/run.js",
    "build": "echo ğŸ› ï¸ Building... && rimraf ./build && tsc --extendedDiagnostics && tsc-alias && copyfiles src/config/.env.* build && npm run build:docs",
    "build:docs": "echo ğŸ“œ Building Docs... && tsc -b ./docs/tsconfig.json && vite build --config ./docs/vite.config.ts",
    "dev": "echo âš™ï¸ Configuring Environment for development... && cross-env NODE_ENV=development node ./scripts/run.js",
    "dev:docs": "echo ğŸ“œ Configuring Environment for development... && vite --config ./docs/vite.config.ts",
    "deploy": "echo ğŸ”¨ Starting Deployment... && npm run build && vercel && echo âœ… Deployment Completed",
    "prepare": "echo ğŸ¶ Husky preparing... && husky",
    "lint": "echo ğŸ”§ ESLint fixing... && eslint . --quiet --fix",
    "lint:check": "echo ğŸ” ESLint checking... && eslint .",
    "format": "echo âœ¨ Prettier formatting... && prettier --write .",
    "format:check": "echo âœ… Prettier checking... && prettier --check .",
    "test": "echo ğŸ§ª Jest testing... && cross-env NODE_PATH=\"$(node scripts/path.js)\" NODE_OPTIONS=--experimental-vm-modules && jest --coverage -o -u --passWithNoTests -w=1 --forceExit --detectOpenHandles --watchAll=false --testPathPattern=src/__tests__ --testPathIgnorePatterns=build",
    "test:watch": "echo ğŸ‘€ Jest watching... && jest --watch",
    "commit": "echo âœï¸ Formatting... && npm run format && npm run lint && echo ğŸ“¦ Git status... && git status && echo â• Git adding... && git add --all && echo ğŸ“ Git committing... && git-cz && echo ğŸš€ Git pushing... && git push -u origin master",
    "lint-staged": "echo ğŸ‰ Running lint-staged.. && lint-staged"
  },
  "config": {
    "commitizen": {
      "path": "@commitlint/cz-commitlint"
    }
  },
  "lint-staged": {
    "**/*": [
      "npm run format:check",
      "npm run lint:check",
      "npm run test"
    ]
  },
  "overrides": {
    "react-json-view": {
      "react": "18.3.1",
      "react-dom": "18.3.1"
    }
  },
